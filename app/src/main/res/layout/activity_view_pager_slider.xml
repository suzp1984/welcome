<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:id="@+id/pager"
                                   tools:context="welcome.zpcat.org.welcome.ViewPagerSliderActivity">

</android.support.v4.view.ViewPager>

    <welcome.zpcat.org.welcome.widget.SpringIndicator
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app.sPointBg="@drawable/ic_guide_gray_point"
            app:siTextSize="8sp"
            app:siRadiusMax="10dp"
            app:siRadiusMin="3dp"
            app:siIndicatorColors="@array/indicator_colors"
            app:siTextColor="@color/colorPrimaryDark"
            app:siSelectedTextColor="@android:color/white"
            app:siIndicatorColor="@color/colorPrimary"
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="bottom|center_horizontal">

    </welcome.zpcat.org.welcome.widget.SpringIndicator>
</FrameLayout>
